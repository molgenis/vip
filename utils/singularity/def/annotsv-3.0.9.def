Bootstrap: localimage
From: sif/bcftools-1.14.sif
Stage: build

Bootstrap: localimage
From: sif/build/openjdk-17.sif

%help
    AnnotSV: Annotation and Ranking of Human Structural Variations
    Usage: singularity run annotSv.sif -annotationsDir [path_to_annotations_dir] -SVinputFile [your_vcf]

%files from build
    /usr/local/bin/bcftools

%post
    version_major=3
    version_minor=0
    version_patch=9

    apk update
    apk add curl zlib libbz2 xz tcl bash iproute2
    apk add --virtual=.build-dependencies build-base

    # bedtools
    curl -Ls -o /usr/local/bin/bedtools https://github.com/arq5x/bedtools2/releases/download/v2.30.0/bedtools.static.binary
    echo "e85d74b6c11b664c05176b1dbf7d2891ad0383ae93805db2d29034db5c2d80ce  /usr/local/bin/bedtools" | sha256sum -c
    chmod +x /usr/local/bin/bedtools

    # AnnotSv
    curl -Ls -o annot-sv.tar.gz "https://github.com/lgmgeo/AnnotSV/archive/refs/tags/v${version_major}.${version_minor}.${version_patch}.tar.gz"
    echo "7042c89ccc7ae0eb2c0eaed3f76a4af2bb918c9a3b9c1afd0e290adf7ef535df  annot-sv.tar.gz" | sha256sum -c
    tar xf annot-sv.tar.gz -C /usr/share

    (
      cd "/usr/share/AnnotSV-${version_major}.${version_minor}.${version_patch}"
      make PREFIX=. install
    )

    # Set Environment
    echo "export PATH=\"$PATH:/usr/share/AnnotSV-${version_major}.${version_minor}.${version_patch}/bin\"" >> "${SINGULARITY_ENVIRONMENT}"
    echo "export ANNOTSV=\"/usr/share/AnnotSV-${version_major}.${version_minor}.${version_patch}/\"" >> "${SINGULARITY_ENVIRONMENT}"

    # cleanup
    apk del .build-dependencies
    rm -rf /var/cache/apk/* annot-sv.tar.gz

%runscript
    AnnotSV "$@"