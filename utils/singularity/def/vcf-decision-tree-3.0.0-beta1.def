Bootstrap: localimage
From: sif/build/openjdk-17.sif

%help
    Command-line application to generate a report for any VCF (Variant Call Format) file based on a report template.
    Usage: java -jar /opt/vcf-decision-tree/lib/vcf-decision-tree.jar

%post
    version_major=3
    version_minor=0
    version_patch=0

    # install
    apk update
    apk add --virtual=.build-dependencies curl

    mkdir -p /opt/vcf-decision-tree/lib
    curl -Ls -o /opt/vcf-decision-tree/lib/vcf-decision-tree.jar "https://github.com/molgenis/vip-decision-tree/releases/download/v${version_major}.${version_minor}.${version_patch}-beta1/vcf-decision-tree.jar"
    echo "db25be7b416a9877a2c78b530276b6aa5b439f46b66290efbd731ca349d10486  /opt/vcf-decision-tree/lib/vcf-decision-tree.jar" | sha256sum -c

    # cleanup
    apk del .build-dependencies
    rm -rf /var/cache/apk/*
