Bootstrap: localimage
From: sif/build/alpine-3.14.3.sif
Stage: build

%post
    version_major=1
    version_minor=14

    apk --no-cache add -X http://dl-cdn.alpinelinux.org/alpine/edge/testing curl build-base zlib-dev bzip2-dev xz-dev libdeflate-dev
    
    # download
    curl -Ls -o bcftools-${version_major}.${version_minor}.tar.bz2 https://github.com/samtools/bcftools/releases/download/${version_major}.${version_minor}/bcftools-${version_major}.${version_minor}.tar.bz2
    echo "b7ef88ae89fcb55658c5bea2e8cb8e756b055e13860036d6be13756782aa19cb  bcftools-${version_major}.${version_minor}.tar.bz2" | sha256sum -c

    # install
    tar xf bcftools-${version_major}.${version_minor}.tar.bz2
    cd bcftools-${version_major}.${version_minor}
    ./configure --disable-libcurl --disable-gcs --disable-s3
    make
    make install

Bootstrap: localimage
From: sif/build/alpine-3.14.3.sif
Stage: final

%files from build
    /usr/local/bin/bcftools

%post
    apk --no-cache add -X http://dl-cdn.alpinelinux.org/alpine/edge/testing zlib libbz2 xz-libs libdeflate

%help
    BCFtools - utilities for variant calling and manipulating VCFs and BCFs.
