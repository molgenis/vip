Bootstrap: scratch

%help
    Singularity container running Alpine Linux    
 
%setup
    version_major=3
    version_minor=15
    version_patch=0
    
    alpine_minirootfs="alpine-minirootfs-${version_major}.${version_minor}.${version_patch}-x86_64.tar.gz"
    alpine_minirootfs_url="http://dl-cdn.alpinelinux.org/alpine/v${version_major}.${version_minor}/releases/x86_64/${alpine_minirootfs}"
    alpine_minirootfs_path="${SINGULARITY_TMPDIR}/${alpine_minirootfs}"

    curl -s -o "${alpine_minirootfs_path}" "${alpine_minirootfs_url}"
    echo "ec7ec80a96500f13c189a6125f2dbe8600ef593b87fc4670fe959dc02db727a2  ${alpine_minirootfs_path}" | sha256sum -c
    tar xzf "${alpine_minirootfs_path}" -C "${SINGULARITY_ROOTFS}" --exclude=./dev --exclude=./etc/hosts

