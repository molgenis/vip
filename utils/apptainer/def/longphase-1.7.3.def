Bootstrap: localimage
From: sif/build/alpine-3.20.3.sif

%post
    version_major=1
    version_minor=7
    version_patch=3

    # install
    apk update
    apk --no-cache add gcompat
    apk add --virtual=.build-dependencies curl

    # download
    curl -Ls -o /opt/longphase/longphase_linux-x64.tar.xz https://github.com/twolinin/longphase/releases/download/v${version_major}.${version_minor}.${version_patch}/longphase_linux-x64.tar.xz
    tar -xJf longphase_linux-x64.tar.xz -C /opt/longphase

    # cleanup
    rm -rf /opt/longphase/longphase_linux-x64.tar.xz

%environment
   PATH=$PATH:/opt/longphase

%help
