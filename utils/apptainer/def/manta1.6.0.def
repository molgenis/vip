Bootstrap: localimage
# 3.15.0 because of python
From: sif/build/alpine-3.15.0.sif

%post
    version_major=1
    version_minor=6
    version_patch=0

    # install
    apk update
    apk add --virtual=.build-dependencies curl
    apk add python2

    curl -Ls -o manta-${version_major}.${version_minor}.${version_patch}.centos6_x86_64.tar.bz2 "https://github.com/Illumina/manta/releases/download/v${version_major}.${version_minor}.${version_patch}/manta-${version_major}.${version_minor}.${version_patch}.centos6_x86_64.tar.bz2"
    #echo "58f2f448d46a9ea2a9e8f8a818f4d1952a28ddcd4b4f91f45cc345b44245dc7b  /opt/vcf-decision-tree/lib/vcf-decision-tree.jar" | sha256sum -c

    tar xf manta-${version_major}.${version_minor}.${version_patch}.centos6_x86_64.tar.bz2

    # cleanup
    apk del .build-dependencies
    rm -rf /var/cache/apk/*
