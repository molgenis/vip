Bootstrap: localimage
From: sif/build/openjdk-21.sif

%help
    Command-line application to generate a report for any VCF (Variant Call Format) file based on a report template.
    Usage: java -jar /opt/vcf-decision-tree/lib/vcf-decision-tree.jar

%post
    version_major=5
    version_minor=1
    version_patch=4

    # install
    apk update
    apk add --virtual=.build-dependencies curl

    mkdir -p /opt/vcf-decision-tree/lib
    curl -Ls -o /opt/vcf-decision-tree/lib/vcf-decision-tree.jar "https://download.molgeniscloud.org/downloads/vip/_dev/github/rna_poc/vcf-decision-tree.jar"
    echo "a2a8568389f3662d3b85d0ec649aea84f4e99a59078c301424b70a8dedc14385  /opt/vcf-decision-tree/lib/vcf-decision-tree.jar" | sha256sum -c

    # cleanup
    apk del .build-dependencies
    rm -rf /var/cache/apk/*