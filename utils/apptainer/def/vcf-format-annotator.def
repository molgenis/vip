Bootstrap: localimage
From: sif/build/openjdk-21.sif

%help
    Command-line application to annotate FORMAT infomation.
    Usage: java -jar /opt/vcf-format-annotator/lib/vcf-format-annotator.jar

%post
    version_major=0
    version_minor=0
    version_patch=0

    # install
    apk update
    apk add --virtual=.build-dependencies curl

    mkdir -p /opt/vcf-format-annotator/lib
    curl -Ls -o /opt/vcf-format-annotator/lib/vcf-format-annotator.jar "https://download.molgeniscloud.org/downloads/vip/_dev/github/rna_poc/vcf-format-annotator.jar"
    echo "ca70cae87dae3ea705e9bc8725ee4837ef7c4f19d7946175fe8e5b32bf8b0bfd  /opt/vcf-format-annotator/lib/vcf-format-annotator.jar" | sha256sum -c

    # cleanup
    apk del .build-dependencies
    rm -rf /var/cache/apk/*
