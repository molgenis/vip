Bootstrap: localimage
From: sif/build/ubuntu-22.04.sif

%post
    version_major=2
    version_minor=3

    apt-get update
    apt-get install -qq build-essential python3-dev

    # install
    pip install whatshap==${version_major}.${version_minor}
    pip show whatshap

    # cleanup
    pip cache purge
    apt-get clean

%environment
   PATH=$PATH:/usr/.local/bin:$PATH

