Bootstrap: localimage
From: sif/build/alpine-3.16.2.sif
Stage: build

%post
    version_major=1
    version_minor=16

    apk --no-cache add -X http://dl-cdn.alpinelinux.org/alpine/edge/community curl build-base zlib-dev bzip2-dev xz-dev libdeflate-dev
    
    # download
    curl -Ls -o samtools-${version_major}.${version_minor}.tar.bz2 https://github.com/samtools/samtools/releases/download/${version_major}.${version_minor}/samtools-${version_major}.${version_minor}.tar.bz2
    echo "6106b27fea5a6962cf5f257d68219e20235cce46039572afeff2c6cf11554764  samtools-${version_major}.${version_minor}.tar.bz2" | sha256sum -c

    # install
    tar xf samtools-${version_major}.${version_minor}.tar.bz2
    cd samtools-${version_major}.${version_minor}
    ./configure --disable-libcurl --disable-gcs --disable-s3 --without-curses
    make
    make install

Bootstrap: localimage
From: sif/build/alpine-3.16.2.sif
Stage: final

%files from build
    /usr/local/bin/samtools

%post
    apk --no-cache add -X http://dl-cdn.alpinelinux.org/alpine/edge/community zlib libbz2 xz-libs libdeflate
