Bootstrap: docker
From: debian:13.3-slim

%environment
    export DEBIAN_FRONTEND=noninteractive

%post
    # configure apt-get to always run quietly, assume yes, disable progress bar, disable caching
    cat > /etc/apt/apt.conf.d/99custom <<'EOF'
APT::Get::Assume-Yes "true";
APT::Get::Quiet "2";
Acquire::Progress-Fancy "0";
Dir::Cache::archives "0";
Dir::Cache::pkgcache "";
Dir::Cache::srcpkgcache "";
EOF

%help
    Debian 13 codename 'trixie'.
