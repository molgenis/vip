Bootstrap: localimage
From: sif/build/OpenJDK.sif

%help
    A tool to generate prioritized genes using phenotype information.
    Usage: java -jar /opt/vibe/lib/vibe.jar

%post
    version_major=5
    version_minor=1
    version_patch=5

    # install
    apk update
    apk add --virtual=.build-dependencies curl

    mkdir -p /opt/vibe/lib
    curl -Ls -o /opt/vibe/lib/vibe.jar "https://github.com/molgenis/vibe/releases/download/vibe-${version_major}.${version_minor}.${version_patch}/vibe-with-dependencies-${version_major}.${version_minor}.${version_patch}.jar"
    echo "e034c2163010eda63610b53f31e4b615f8a868ba684ae4dbdbd9e7d334bfdbeb  /opt/vibe/lib/vibe.jar" | sha256sum -c

    # cleanup
    apk del .build-dependencies
    rm -rf /var/cache/apk/*
