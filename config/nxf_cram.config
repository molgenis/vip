includeConfig 'nxf_vcf.config'
includeConfig 'nxf_call_snv.config'
includeConfig 'nxf_call_str.config'
includeConfig 'nxf_call_sv.config'

env {
  CMD_MOSDEPTH="apptainer exec --no-mount home --bind \${TMPDIR} ${APPTAINER_CACHEDIR}/mosdepth-0.3.3.sif mosdepth"
  CMD_SPECTRE="apptainer exec --no-mount home --bind \${TMPDIR} ${APPTAINER_CACHEDIR}/spectre-0.2.0.sif spectre"
}

params {
  cram {
    call_snv = true
    call_str = true
    call_sv = true
  }
}

process {
  withLabel: 'coverage' {
		cpus = 1
    memory = '8GB'
  }
}