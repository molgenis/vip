includeConfig 'nxf_vcf.config'
includeConfig 'nxf_call_cnv.config'
includeConfig 'nxf_call_snv.config'
includeConfig 'nxf_call_str.config'
includeConfig 'nxf_call_sv.config'

env {
  CMD_WHATSHAP="apptainer exec --no-mount home --bind \${TMPDIR} ${APPTAINER_CACHEDIR}/whatshap-2.4.sif whatshap phase"
}

params {
  cram {
    call_snv = true
    call_str = true
    call_sv = true
    call_cnv = true
  }
}

process {
  withLabel: 'coverage' {
		cpus = 1
		// see https://github.com/brentp/mosdepth/issues/245
    memory = '16GB'
  }
}