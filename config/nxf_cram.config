includeConfig 'nxf_vcf.config'

env {
  CMD_CLAIR3="apptainer exec --bind \${TMPDIR} ${APPTAINER_CACHEDIR}/clair3-v0.1-r12.sif /opt/bin/run_clair3.sh"
  CMD_MANTA="apptainer exec --bind \${TMPDIR} ${APPTAINER_CACHEDIR}/manta-1.6.0.sif python2"
  CMD_BGZIP = "apptainer exec --bind \${TMPDIR} ${APPTAINER_CACHEDIR}/vep-107.0.sif bgzip"
  CMD_TABIX= "apptainer exec --bind \${TMPDIR} ${APPTAINER_CACHEDIR}/vep-107.0.sif tabix"
  CMD_SNIFFLES2="apptainer exec --bind \${TMPDIR} ${APPTAINER_CACHEDIR}/sniffles2.sif sniffles"
}

params {
  cram {
    clair3 {
      illumina {
        model_name="ilmn"
      }
      nanopore {
        model_name="r941_prom_sup_g5014"
      }
    }
    sniffles2{
      GRCh37 {
        tandem_repeat_annotations="${projectDir}/resources/GRCh37/tandem_repeat_annotations.bed"
      }
      GRCh38 {
        tandem_repeat_annotations="${projectDir}/resources/GRCh38/tandem_repeat_annotations.bed"
      }
    }
  }
}

process {
  withName: 'clair3_call' {
    cpus = 4
    memory = '8GB'
    time = '5h'
  }
    withName: 'manta_call' {
    cpus = 4
    memory = '8GB'
    time = '5h'
  }
}
