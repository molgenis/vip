includeConfig 'nxf_vcf.config'
includeConfig 'nxf_call_cnv.config'
includeConfig 'nxf_call_snv.config'
includeConfig 'nxf_call_str.config'
includeConfig 'nxf_call_sv.config'

params {
  cram {
    call_snv = true
    call_str = true
    call_sv = true
    call_cnv = true

    coverage {
      GRCh38 {
        default_bed_exon = "${projectDir}/resources/GRCh38/default_exon_20250122.bed"
        default_bed_gene = "${projectDir}/resources/GRCh38/default_gene_20250122.bed"
      }
    }
  }
}

process {
  withLabel: 'coverage' {
		cpus = 1
		// see https://github.com/brentp/mosdepth/issues/245
    memory = '16GB'
  }
}