env {
  VIP_VERSION = "5.0.0"

  TMPDIR = "\${TMPDIR:-\${NXF_TEMP:-\$(mktemp -d)}}"
  APPTAINER_BIND = "${APPTAINER_BIND}"
  APPTAINER_DISABLE_CACHE = "True"
  APPTAINER_TMPDIR = "\${TMPDIR}"
}

process {
  cpus = 4
  memory = '4GB'
  time = '4h'
}

profiles {
  standard {
    process.executor = 'local'
  }

  cluster {
    process.executor = 'slurm'
  }
}
