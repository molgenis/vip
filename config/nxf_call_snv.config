includeConfig 'nxf.config'

env {
  CMD_DEEPVARIANT="apptainer exec --no-mount home --bind \${TMPDIR} ${APPTAINER_CACHEDIR}/deepvariant-1.6.0.sif /opt/deepvariant/bin/run_deepvariant"
  CMD_DEEPVARIANT_DEEPTRIO="apptainer exec --no-mount home --bind \${TMPDIR} ${APPTAINER_CACHEDIR}/deepvariant_deeptrio-1.6.0.sif /opt/deepvariant/bin/deeptrio/run_deeptrio"
}

params {
  snv {
    deeptrio {
      illumina {
        WES {
          model_name="WES"
        }
        WGS {
          model_name="WGS"
        }
      }
      nanopore {
        model_name="ONT"
      }
      pacbio_hifi {
        model_name="PACBIO"
      }
    }
    deepvariant {
      illumina {
        WES {
          model_name="WES"
        }
        WGS {
          model_name="WGS"
        }
      }
      nanopore {
        model_name="ONT_R104"
      }
      pacbio_hifi {
        model_name="PACBIO"
      }
    }
    glnexus {
      WES {
        preset="DeepVariantWES"
      }
      WGS {
        preset="DeepVariantWGS"
      }
    }
  }
}

process {
  withLabel: 'deepvariant_call' {
    time = '5h'
  }
  withLabel: 'deepvariant_call_duo|deepvariant_call_trio' {
    time = '5h'
  }
  withLabel: 'deepvariant_concat_gvcf|deepvariant_concat_vcf' {
    memory = '2GB'
    time = '30m'
  }
  withLabel: 'deepvariant_joint_call' {
    memory = '2GB'
    time = '30m'
  }
}