includeConfig 'nxf.config'

env {
  CMD_CLAIR3="apptainer exec --no-mount home --bind \${TMPDIR} ${APPTAINER_CACHEDIR}/clair3-v1.0.2.sif /opt/bin/run_clair3.sh"
  CMD_CLAIR3="apptainer exec --no-mount home --bind \${TMPDIR} ${APPTAINER_CACHEDIR}/deepvariant.sif /opt/deepvariant/bin/run_deepvariant"
}

params {
  snv {
    illumina_tool=deepvariant
    nanopore_tool=clair3
    pacbio_tool=clair3
    deepvariant{
      illumina {
        model_name="ilmn"
      }
    }
    clair3 {
      illumina {
        model_name="ilmn"
      }
      nanopore {
        model_name="r941_prom_sup_g5014"
      }
      pacbio_hifi {
        model_name="hifi"
      }
    }
  }
}

process {
  withLabel: 'clair3_call|clair3_joint_call' {
    cpus = 4
    memory = '8GB'
    time = '5h'
    
    //Retry once because of https://github.com/HKU-BAL/Clair3/issues/200
    errorStrategy = 'retry'
    maxRetries = 1
  }
}