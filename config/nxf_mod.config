includeConfig 'nxf.config'

// Environmental commands
env {
  CMD_DORADO = "/groups/umcg-gcc/tmp02/users/umcg-jkloosterman/dorado-0.3.4-linux-x64/bin/dorado"
  CMD_MODKIT = "/groups/umcg-gcc/tmp02/users/umcg-jkloosterman/dist/modkit"
  PYTHON_ENV_ACTIVATE = "/groups/umcg-gcc/tmp02/users/umcg-jkloosterman/jk_py_env/bin/activate"
}

// Process how to execute
process {
	withLabel: 'dorado'{
		executor = 'slurm'
		memory = '20GB'
		time = '3h'
		cpus = 4
		clusterOptions = '--gres=gpu:a40:1 --qos=priority'
	}

	withLabel: 'sort_bam'{
		executor = 'slurm'
		memory = '10GB'
		time = '4h'
		cpus = 4
	}

	withLabel: 'modkit'{
		executor = 'slurm'
		memory = '30GB'
		time = '4h'
		cpus = 5
	}
}

// Parameters used in workflow mod
params {
	dorado_model = "/groups/umcg-gcc/tmp02/users/umcg-jkloosterman/dorado_models/dna_r10.4.1_e8.2_400bps_hac@v4.2.0/"
}

