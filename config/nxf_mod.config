includeConfig 'nxf.config'

env {
  CMD_DORADO = "/groups/umcg-gcc/tmp02/users/umcg-jkloosterman/dorado-0.3.4-linux-x64/bin/dorado"
  CMD_MODKIT = "/groups/umcg-gcc/tmp02/users/umcg-jkloosterman/dist/modkit"
}

process {
	withLabel: 'dorado'{
		executor = 'slurm'
		memory = '60GB'
		time = '1d'
		cpus = 5
		clusterOptions = '--gres=gpu:a40:2'
	}

	withLabel: 'sort_bam'{
		executor = 'slurm'
		memory = '10GB'
		time = '4h'
		cpus = 4
	}

	withLabel: 'modkit'{
		executor = 'slurm'
		memory = '30GB'
		time = '4h'
		cpus = 5
	}
}

params {
	pod5 = "/groups/umcg-gdio/tmp02/projects/nanopore_methylation_test_data/20231006_0837_X2_FAW14788_9c5ad041/pod5_pass/"
	run = "20231006_0837_X2_FAW14788_9c5ad041"
	dorado_model = "/groups/umcg-gcc/tmp02/users/umcg-jkloosterman/dorado_models/dna_r10.4.1_e8.2_400bps_hac@v4.2.0/"
	reference_g1k_v37 = "/groups/umcg-gcc/tmp02/users/umcg-jkloosterman/ont_sample_data/human_g1k_v37.fasta"

}

